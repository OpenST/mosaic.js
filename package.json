{
  "name": "@openstfoundation/mosaic.js",
  "version": "0.10.0",
  "description": "NPM package that provides mosaic contract abis and bins. This package also helps in mosaic chain setup and interaction with mosaic contracts.",
  "main": "lib/mosaic.node.js",
  "browser": "lib/mosaic.web.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenSTFoundation/mosaic.js.git"
  },
  "keywords": [
    "OpenST",
    "OST",
    "Mosaic",
    "Simple Token",
    "Token Economy",
    "web3",
    "Ethereum",
    "EIP20"
  ],
  "homepage": "https://openst.org",
  "author": "OpenST Ltd.",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/OpenSTFoundation/mosaic.js/issues"
  },
  "scripts": {
    "test": "mocha --recursive --timeout 5000",
    "test:integration": "node test_integration/integration_tests.js",
    "pre-commit": "lint-staged",
    "build": "webpack --mode=production"
  },
  "dependencies": {
    "@openstfoundation/mosaic-contracts": "^0.10.0-alpha.1",
    "bignumber.js": "4.1.0",
    "js-scrypt": "^0.2.0",
    "node-cmd": "3.0.0",
    "shelljs": "0.8.1",
    "web3": "1.0.0-beta.37",
    "web3-eth-accounts": "1.0.0-beta.37"
  },
  "devDependencies": {
    "@babel/core": "7.1.0",
    "@babel/polyfill": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/runtime": "7.0.0",
    "babel-loader": "8.0.2",
    "bn.js": "4.11.8",
    "chai": "4.2.0",
    "commander": "2.8.1",
    "edit-json-file": "1.0.8",
    "eslint": "^5.12.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "lint-staged": "8.0.3",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.3",
    "os": "0.1.1",
    "package-json-cleanup-loader": "1.0.3",
    "pre-commit": "1.2.2",
    "prettier": "1.15.3",
    "rlp": "2.1.0",
    "sinon": "7.2.3",
    "wait-port": "^0.2.2",
    "webpack": "4.19.1",
    "webpack-cli": "3.1.0",
    "webpack-uglify-js-plugin": "1.1.9"
  },
  "pre-commit": {
    "run": [
      "pre-commit"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write --config .prettierrc.json",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.js"
    ]
  }
}
